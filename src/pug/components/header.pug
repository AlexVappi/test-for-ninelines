header.header.show-up.first-load__show
	.container.header__container
		.header__logo
			a.js-to-anchor(href="#intro")
				+lazyPicture({
					src: `${baseDir}images/head.png`,
					alt: "head",
				}).header__picture

		button.header__burger.js-burger(type="button")
			svg.burder__svg(viewbox="0 0 100 100" width="40")
				path.burger_line.top(d="m 30,30 h 40 c 0,0 9.044436,-0.654587 9.044436,-8.508902 0,-7.854315 -8.024349,-11.958003 -14.89975,-10.85914 -6.875401,1.098863 -13.637059,4.171617 -13.637059,16.368042 v 40")
				path.burger_line.middle(d="m 30,47 h 40")
				path.burger_line.bottom(d="m 30,66 h 40 c 12.796276,0 15.357889,-11.717785 15.357889,-26.851538 0,-15.133752 -4.786586,-27.274118 -16.667516,-27.274118 -11.88093,0 -18.499247,6.994427 -18.435284,17.125656 l 0.252538,40")

		nav.header__menu(style="transition-delay: 0.3s")
			img.header__figure(src=`${baseDir}images/header-fig.png` style="transition-delay: 0.9s" alt="header-fig")

			.header__list
				each object, key in data.header.menu
					a.header__link.js-to-anchor(
						href=object.url
						data-link=key
					)
						!= object.name
			+lazyPicture({
				src: `${baseDir}images/clock.png`,
				alt: "clock",
			}).menu__figure
